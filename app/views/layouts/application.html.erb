<!DOCTYPE html>
<html>
  <head>
    <title>MotherShipped</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="<%= @body_class %>"></div>
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <h1>FedUps</h1>
          <h4>For all your shipping needs</h4>
        </div>
        <div class="col-6">
        </div>
        <div class="col">
          Questions: +1-800-555-5555
        </div>
      </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <!-- add logo here -->
            <%# image_tag("icon.png", class: "small") %>
          <% if user_signed_in? %>
            <span class="navbar-brand"><%= link_to "Home", root_path %></span>
            <span class="navbar-brand"><%= link_to "Cargo Ships", boats_path %></span>
            <span class="navbar-brand"><%= link_to "Contracts", jobs_path %></span>
            <span class="navbar-brand"><%= link_to "Edit Account", edit_registration_path(current_user) %></span>
             <!-- <span class="navbar-brand"><%# link_to "Your Listings", user_path(current_user) %></span> -->
            <span class="navbar-brand"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></span>
          <% else %>
            <span class="navbar-brand"><%= link_to "Home", home_index_path %></span>
            <span class="navbar-brand"><%= link_to "Create Account", new_user_registration_path %></span>
            <span class="navbar-brand"><%= link_to "Login", new_user_session_path %></span>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="wrapper">

      <%= yield %>

      <div class="push"></div>
        <div class="container-fluid">
          <footer class="footer navbar-fixed-bottom">
          <% if user_signed_in? %>
            <span class="navbar-brand"><%= link_to "Home", root_path %></span>
            <span class="navbar-brand"><%= link_to "Cargo Ships", boats_path %></span>
            <span class="navbar-brand"><%= link_to "Contracts", jobs_path %></span>
            <span class="navbar-brand"><%= link_to "Edit Account", edit_user_registration_path %></span>
            <!-- <span class="navbar-brand"><%# link_to "Your Listings", user_path(current_user) %></span> -->
            <span class="navbar-brand"> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></span>
          <% else %>
            <span class="navbar-brand"><%= link_to "Home", root_path %></span>
            <span class="navbar-brand"><%= link_to "Create Account", new_user_registration_path %></span>
            <span class="navbar-brand"> <%= link_to "Login", new_user_session_path %></span>
            <% end %>
          </footer>
        </div>
      </div>
  </body>

</html>
